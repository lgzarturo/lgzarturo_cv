    <script is:inline>
        // Script para alternar el tema
        const themeToggle = document.getElementsByClassName('theme-toggle');
        const themeToggleText = document.getElementsByClassName('theme-toggle-text');
        function setTheme(theme, target) {
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
                target.textContent = '‚òÄÔ∏è Modo claro';
            } else {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
                target.textContent = 'üåô Modo oscuro';
            }
        }
        for (let i = 0; i < themeToggle.length; i++) {
            const btn = themeToggle[i];
            btn.addEventListener('click', () => {
                if (document.documentElement.classList.contains('dark')) {
                    for (let j = 0; j < themeToggleText.length; j++) {
                        setTheme('light', themeToggleText[j]);
                    }
                } else {
                    for (let j = 0; j < themeToggleText.length; j++) {
                        setTheme('dark', themeToggleText[j]);
                    }
                }
            });
        }
